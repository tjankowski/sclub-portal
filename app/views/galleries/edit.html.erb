<div class="box">
  <div class="box_header">
    <h1>Editing gallery</h1>
  </div>
  <div class="box_content">
    <% form_for(@gallery) do |f| %>
      <%= f.error_messages %>

      <p>
        <%= f.label :name %><br />
        <%= f.text_field :name %>
      </p>
      <p>
        <%= f.label :published %>
        <%= f.check_box :published %>
      </p>
      <p>
        <%= f.submit 'Zapisz' %>
      </p>
    <% end %>

    <%= link_to 'PokaÅ¼', @gallery %>
  </div>
</div>
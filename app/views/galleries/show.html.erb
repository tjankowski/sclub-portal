<%= render :partial => 'menu' %>

<% if logged_in? %>
  <% if current_user.has_role?('administrator')  %>
    <div class="box">
      <%= new_gallery_tool_link %>
      <%= edit_gallery_tool_link @gallery %>
      <% link_to @gallery, :confirm => 'Are you sure?', :method => :delete do %>
        <div class="inline_links">
          <%= image_tag "delete.png", :size => "15x15", :hspace => "5" %>
          Usu≈Ñ
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>

<div class="box">
  <div class="box_header">
    <span class="title">
      <%=h @gallery.name %>
    </span>
  </div>
  <div class="box_content">
    <%= render :partial => "photo", :collection => @gallery.photos %>
  </div>
</div>
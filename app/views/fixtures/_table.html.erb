<div class="box">
  <div class="box_header">
    <h1>
      Tabela
    </h1>
  </div>
  <div class="box_content">
    <div>
      <table class="small_font" width="100%" cellspacing="0">
        <tr>
          <th>Nazwa</th>
          <th>M</th>
          <th>Pkt</th>
          <th>Z</th>
          <th>R</th>
          <th>P</th>
          <th>Bramki</th>
          <th>M</th>
          <th>Pkt</th>
          <th>Z</th>
          <th>R</th>
          <th>P</th>
          <th>Br</th>
          <th>M</th>
          <th>Pkt</th>
          <th>Z</th>
          <th>R</th>
          <th>P</th>
          <th>Br</th>
        </tr>
        <% standings = SeasonStanding.find_all_by_season_id(season, :order => "position ASC") %>

        <% for standing in standings %>

          <% if standing.position == 1 %>
            <% style = "background: GreenYellow" %>
          <% else %>
            <% if standing.position == 2 %>
              <% style = "background: YellowGreen" %>
            <% else %>
              <% if standing.position == 3 %>
                <% style = "background: LightGreen" %>
              <% else %>
                <% if standing.position == standings.size %>
                  <% style = "background: DimGray " %>
                <% else %>
                  <% if standing.position == standings.size-1 %>
                    <% style = "background: Gray" %>
                  <% else %>
                    <% if standing.position == standings.size-2 %>
                      <% style = "background: Silver" %>
                    <% else %>
                      <% style = "background: Transparent" %>
                    <% end %>
                  <% end %>
                <% end %>
              <% end %>
            <% end %>
          <% end %>

          <tr style = "<%= style %>" >
            <td>
              <%= standing.position %>.
              <%= standing.team.official_name %>
            </td>
            <%= render :partial => 'team_stats', :locals => { :standing => standing } %>
            <%= render :partial => 'team_home_stats', :locals => { :standing => standing } %>
            <%= render :partial => 'team_away_stats', :locals => { :standing => standing } %>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
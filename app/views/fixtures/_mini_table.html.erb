<div class="box">
  <div class="box_header">
    <h1>
      <%= season.name %>
    </h1>
  </div>
  <div class="box_content">
    <div class="small_font">
      <table>
        <tr>
          <th>Nazwa</th>
          <th>Mecze</th>
          <th>Punkty</th>
        </tr>
        <% standings = SeasonStanding.find_all_by_season_id(season, :order => "position ASC") %>
        <% for standing in standings %>
          <tr>
            <td>
              <%= standing.position %>.
              <%= standing.team.official_name %>
            </td>
            <td>
              <%= standing.matches %>
            </td>
            <td>
              <%= standing.points %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
<% if logged_in? %>
  <% if current_user.has_role?('administrator')  %>
    <div class="box">
      <div class="box_content">
        <% link_to :controller => "entries", :action => "index", :id => @player do %>
          <div class="inline_links">
            <%= image_tag "notepad.png", :size => "15x15", :hspace => "5" %>
            Zgłoszenia
          </div>
        <% end %>
        <% link_to :controller => "player_gallery", :action => "index", :id => @player do %>
          <div class="inline_links">
            <%= image_tag "images.png", :size => "15x15", :hspace => "5" %>
            Galerie
          </div>
        <% end %>
        <% link_to edit_player_path(@player) do %>
          <div class="inline_links">
            <%= image_tag "user.png", :size => "15x15", :hspace => "5" %>
            Edytuj
          </div>
        <% end %>
        <% link_to @player, :confirm => 'Are you sure?', :method => :delete do %>
          <div class="inline_links">
            <%= image_tag "delete.png", :size => "15x15", :hspace => "5" %>
            Usuń zawodnika
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>

<%= render :partial => @player %>

<div id="player_stats">
 <%= render :partial => "players/player_stats", :locals => { :player => @player } %>
</div>

<div class="box">
  <div class="box_header">
    <h1>Nowy tag</h1>
  </div>
  <div class="box_content">
    <% form_for :tag do |f| %>
      <div class="form_row">
        <label for="name">Nazwa</label>
        <%= f.text_field :name %>
      </div>
      <div>
        <%= submit_tag "Zapisz", :class => "submit" %>
      </div>
    <% end %>
  </div>
</div>

<% if logged_in? %>
  <% if current_user.has_role?('administrator')  %>
    <div class="box">
      <div class="box_content">
      <% link_to :controller => "gallery_contents", :action => "index", :id => @photo do %>
        <div class="inline_links">
          <%= image_tag "images.png", :size => "15x15", :hspace => "5" %>
          Galerie
        </div>
      <% end %>
      <% link_to edit_photo_path(@photo) do %>
        <div class="inline_links">
          <%= image_tag "document_edit.png", :size => "15x15", :hspace => "5" %>
          Edytuj
        </div>
      <% end %>
      <% link_to @photo, :confirm => 'Are you sure?', :method => :delete do %>
        <div class="inline_links">
          <%= image_tag "delete.png", :size => "15x15", :hspace => "5" %>
          Usu≈Ñ
        </div>
      <% end %>
      </div>
    </div>
  <% end %>
<% end %>

<div class="box">
  <%= render :partial => @photo %>
</div>

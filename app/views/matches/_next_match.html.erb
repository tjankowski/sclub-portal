<% if next_match %>
  <div class="box">
    <div class="box_header">
      <h1>
        NastÄ™pny mecz
      </h1>
    </div>
    <div class="box_content">
      <div class="match">
        <% link_to :controller => "matches", :action => "show", :id => next_match do %>
          <div class="match_date">
            <%= l next_match.match_start %>
          </div>
          <div class="match_summary">
            <div class="home_team">
              <%=h  next_match.team_official_name %>
            </div>
            <div class="result">
              <%=h  next_match.home %> - <%=h  next_match.away %>
            </div>
            <div class="away_team">
              <%=h  next_match.rival_official_name %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
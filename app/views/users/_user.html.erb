<tr class="<%= cycle('odd', 'even') %>">
  <td><%= link_to user.login, user %></td>
  <td><%=h user.email %></td>
  <td><%= user.enabled ? 'tak' : 'nie' %>
    <% unless user == current_user %>
      <% if user.enabled %>
        <%= link_to('zablokuj', user_path(user.id), :method => :delete) %>
      <% else %>
        <%= link_to('odblokuj', enable_user_path(user.id), :method => :put) %>
      <% end %>
    <% end %>
  </td>
  <td>[<%= link_to 'Edytuj role', user_roles_path(user) %>]</td>
</tr>
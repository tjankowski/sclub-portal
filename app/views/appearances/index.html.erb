<h1>Listing appearances</h1>

<table>
  <tr>
    <th>Match</th>
    <th>Player</th>
    <th>Rating</th>
    <th>Start</th>
    <th>End</th>
    <th>Number</th>
  </tr>

<% @appearances.each do |appearance| %>
  <tr>
    <td><%=h appearance.match_id %></td>
    <td><%=h appearance.player_id %></td>
    <td><%=h appearance.rating %></td>
    <td><%=h appearance.start %></td>
    <td><%=h appearance.end %></td>
    <td><%=h appearance.number %></td>
    <td><%= link_to 'Show', appearance %></td>
    <td><%= link_to 'Edit', edit_appearance_path(appearance) %></td>
    <td><%= link_to 'Destroy', appearance, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New appearance', new_appearance_path %>
<%= stylesheet_link_tag "site" %>
<% if logged_in? %>
  <% if current_user.has_role?('administrator')  %>
    <div class="inline_box">
      <div class="box_header">
        <h1>Edycja wiadomości live</h1>
      </div>
      <div class="box_content">
        <% form_for @broadcast_message do |f| %>
          <table>
            <th>Minuta</th>
            <th>Treść</th>
            <th>Informacja</th>
            <tr>
              <td><%= f.select :minute, minutes, {:include_blank => 'Brak'} %></td>
              <td><%= f.text_area :body, :rows => 2, :cols => 50 %></td>
              <td><%= f.select :status, broadcast_messages, {:include_blank => 'Brak'} %></td>
            </tr>
          </table>
          <div class="center_align">
            <%= f.submit "zmień" %>
          </div>
        <% end %>
        <hr />
        <% link_to @broadcast_message, :confirm => 'Na pewno chcesz usunąć?', :method => :delete do %>
          <div class="inline_links">
            <%= image_tag "delete.png", :size => "15x15", :hspace => "5" %>
            Usuń widomość
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
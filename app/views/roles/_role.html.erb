<li>
  <%= role.rolename %>
    <% if @user.has_role?(role.rolename) %>
      <%= link_to 'remove role', user_role_url(:id => role.id, :login => @user.login), :method => :delete %>
    <% else %>
      <%= link_to 'assign role', user_role_url(:id => role.id, :login => @user.login), :method => :put %>
    <% end %>
</li>
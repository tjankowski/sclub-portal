<div class="box">
  <div class="box_header">
    <h1>Edycja roli</h1>
  </div>
  <div class="box_content">
    <% form_for(@role) do |f| %>
      <%= f.error_messages %>

      <p>
        <%= f.label :rolename %><br />
        <%= f.text_field :rolename %>
      </p>
      <p>
        <%= f.submit 'Zapisz' %>
      </p>
    <% end %>

  </div>
</div>
<% if logged_in? %>
  <% if current_user.has_role?('administrator')  %>
    <div class="box">
      <div class="box_content">
      <% link_to :controller => "staff_teams", :action => "index", :id => @staff do %>
        <div class="inline_links">
          <%= image_tag "notepad.png", :size => "15x15", :hspace => "5" %>
          Zgłoszenia
        </div>
      <% end %>
      <% link_to edit_staff_path(@staff) do %>
        <div class="inline_links">
          <%= image_tag "user.png", :size => "15x15", :hspace => "5" %>
          Edytuj
        </div>
      <% end %>
      <% link_to @staff, :confirm => 'Are you sure?', :method => :delete do %>
        <div class="inline_links">
          <%= image_tag "delete.png", :size => "15x15", :hspace => "5" %>
          Usuń
        </div>
      <% end %>
      </div>
    </div>
  <% end %>
<% end %>

<%= render :partial => @staff %>
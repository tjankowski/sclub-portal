<% if logged_in? %>
  <% if current_user.has_role?('administrator')  %>
    <div class="box">
      <div class="box_content">
        <% link_to :controller => "seasons", :action => "new" do %>
          <div class="inline_links">
            <%= image_tag "add.png", :size => "15x15", :hspace => "5" %>
            <span class="small_font">
              Nowy
            </span>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
<div class="box">
  <div class="box_header">
    <span class="title">
      Rozgrywki
    </span>
  </div>
  <div class="box_content">
    <% for season in @seasons do %>
        <% link_to(:controller => "seasons", :action => "show", :id => season) do %>
          <div>
            <b><%=h season.name %></b> (<%=h season.start_at %> - <%=h season.end_at %>)
          </div>
        <% end %>
      <% end %>
    </div>
</div>
<div class="box">
  <div class="box_header">
    <h1>
      Zapomniałeś hasła ?
    </h1>
  </div>
  <div class="box_content">
    <% form_tag url_for(:action => 'create') do %>     
      <span class="inline_links">
        <%= image_tag "email.png", :size => "15x15", :hspace => "5" %>
        Podaj adres e-mail użyty do utworzenia konta:
      </span>
      <%= text_field_tag :email, "", :size => 50 %><br />

      <div class="center_align">
        <%= submit_tag 'Zresetuj hasło' %>
      </div>
    <% end %>
  </div>
</div>